
class Solution:
    def getnextnum(self,x:int)->int:
        summ=0
        while x>0:
            digit=x%10
            summ+=digit**2
            x=x//10
        return summ
    def isHappy(self, n: int) -> bool:
        # using fast and slow
        fast=self.getnextnum(self.getnextnum(n))     #if not initialized we will never eneter the loop
        slow=self.getnextnum(n)
        while fast!=1 and fast!=slow:
            slow=self.getnextnum(slow)
            fast=self.getnextnum(self.getnextnum(fast))
        return fast==1



