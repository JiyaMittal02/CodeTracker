class Solution:
    def spiralOrder(self, matrix: List[List[int]]) -> List[int]:
        #making four pointers
        left=0
        right=len(matrix[0])
        top=0
        bottom=len(matrix)
        ans=[]
        while left<right and top<bottom:
            #getting the topmost row
            for row in range(left,right):
                ans.append(matrix[top][row])
            top+=1
            #getting rightmost column
            for row in range(top,bottom):
                ans.append(matrix[row][right-1])
            right-=1
            #getting bottom row
            if not(left<right and top<bottom):
                break
            for i in range(right-1,left-1,-1): #if i write just left it wont consider elet at the first index 
                ans.append(matrix[bottom-1][i])
            bottom-=1
            
            # getting the left column
            for i in range(bottom-1,top-1,-1):
                ans.append(matrix[i][left])
            left+=1
        return ans




        
