class Solution:
    def floorSqrt(self, n: int) -> int:
        if n==0 or n==1:
            return n
        i=0
        j=n//2
        while i<=j:
            mid=(i+j)//2
            if (mid*mid)==n:
                return mid
            elif mid*mid>n:
                j=mid-1
            else:
                i=mid+1
        return j
        
